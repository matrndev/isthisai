<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Database - IsThisAI</title>
    <link rel="stylesheet" href="/node_modules/bootstrap/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1>Database Records</h1>
        
        <% if (message) { %>
            <div class="alert alert-info">
                <%= message %>
            </div>
        <% } %>
        
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Topic</th>
                    <th>Model</th>
                    <th>Platform</th>
                    <th>Date Created</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (documents.length === 0) { %>
                    <tr>
                        <td colspan="5" class="text-center">No records found</td>
                    </tr>
                <% } else { %>
                    <% documents.forEach(doc => { %>
                        <tr>
                            <td><%= doc.topic %></td>
                            <td><%= doc.model %></td>
                            <td><%= doc.platform %></td>
                            <td><%= new Date(doc.dateCreated).toLocaleString() %></td>
                            <td>
                                <div class="btn-group">
                                    <a href="/details/<%= doc._id %>" class="btn btn-primary btn-sm">View Details</a>
                                    <form action="/delete/<%= doc._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this record?');" class="d-inline ms-1">
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                <% } %>
            </tbody>
        </table>
        
        <a href="/" class="btn btn-primary">Back to Home</a>
    </div>




</html></body>    <script src="/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>    <script src="/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>